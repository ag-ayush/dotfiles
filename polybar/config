[colors]
background = #85000000
foreground = ${xrdb:color7:#222}
foreground-alt = #555
primary = ${xrdb:color6:#cb7119}
secondary = $(xrdb:color1:#000000)
alert = ${xrdb:color4:#8A0F2E}


[bar/top]
;------------------------------;
;          dimensions          ;
;------------------------------;
width = 100%
height = 20
offset-y = 0
offset-x = 0

border-size = 0
line-size = 1

;-------------------------;
;          fonts          ;
;-------------------------;
font-0 = "FontAwesome5Free:style=Solid:pixelsize=9"
font-1 = "DejaVuSansMono:pixelsize=9"

;--------------------------;
;          colors          ;
;--------------------------;
line-color = #f00
